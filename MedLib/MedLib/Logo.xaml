<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedLib.Logo"
             BackgroundColor="#B2EBF2">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,20,0,0">
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to MedLib!" HorizontalOptions="Center" VerticalOptions="StartAndExpand" FontSize="Large" TextColor="#039BE5"/>
                        <Button x:Name="B1"
                    Text="Let's work!"
                    FontSize="Large"
                    Clicked="Button_Clicked1"
                    TextColor="#78318f"
                    BackgroundColor="#B2EBF2"
                     VerticalOptions="StartAndExpand"/>
            <Image x:Name="Im"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <BoxView WidthRequest="150" HeightRequest="350" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>