<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedLib.SearchPage"            
             BackgroundColor="#B2EBF2">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,20,0,0">
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Spacing="18">
        <StackLayout>
            <BoxView WidthRequest="50" HeightRequest="100" />
            <Label Text="here is something" TextColor="#B2EBF2" FontSize="Large"/>
            <Entry x:Name="Search"
                    FontSize="Large"
                   Placeholder="Name"/>
            <Button   
                 FontSize="Large"
                 Clicked="Click"  
                BackgroundColor="#B2EBF2"
                Text="Search"
                TextColor="#78318f"
                x:Name="B"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>